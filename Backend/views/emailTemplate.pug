doctype html
html
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(http-equiv='X-UA-Compatible', content='ie=edge')
    body
        div(style="max-width:900px; height:auto; margin:0 auto;")
            div(style="display: flex; flex-direction: row;")
                div(style="max-width:150px; height:7vh; class=logo;")
                    img(src='https://i.imgur.com/zwrkbD1.png' alt='logo' style="max-width:50px; margin:0em 1em 0em 1em;")
                h1(style="color:#e63632; font-size:35px; text-align:left;") FireAlarm
            div(style="background-color:#e63632; height:0.3vh; max-width:900px;")
            div(style="margin-top:0.5em; margin-left:1.75em;")
            h1(style="color:#2e2e2e; font-size:22px; text-align:left; margin-bottom: 1rem;")= heading
              if checkPaymentMethod
                img(src=`${QRCode}` alt="QR Code Image" style="float:right;")
            div(style="color:#676767; font-size:15px; margin-bottom: 0.5em;") Ahoj,
            div(style="color:#676767; font-size:15px; margin-bottom: 0.5em;")= textInfo
            div(style="color:#676767; font-size:15px; margin-bottom: 0;")= details
            div(style="color:#e63632; font-size:16px; font-weight:600; margin: 0.5rem 0; float: left; width: 100%;") Platební metoda:
                div(style="color:#676767; font-size:15px; margin-bottom: 0;")= method
                div(style="color:#676767; font-size:15px; margin-bottom: 0; font-weight:400;")= totalAmount
                div(style="color:#676767; font-size:15px; margin-bottom: 0; font-weight:400;")= accountDetails
                div(style="color:#676767; font-size:15px; margin-bottom: 0; font-weight:400;")= vs
                div(style="color:#676767; font-size:15px; margin-bottom: 0; font-weight:400;")= paymentInfo
            div(style="color:#e63632; font-size:16px; font-weight:600; margin: 0.5rem 0; float: left; width: 100%;") Doprava:
                div(style="color:#676767; font-size:15px; margin-bottom: 0;")= deliveryMethod
            div(style="color:#e63632; font-size:16px; font-weight:600; margin: 0.5rem 0; width: 100%; float: left;") Osobní informace:
            table(style="margin: 0.5rem auto; width: 100%; border-collapse: collapse; border: none;")
                tr(style="padding: 10px;")
                    th(style="background: #f5f5f5; padding: 10px; text-align: left;") Jméno
                    th(style="background: #f5f5f5; padding: 10px; text-align: left;") Adresa
                    th(style="background: #f5f5f5; padding: 10px; text-align: left;") Email
                    th(style="background: #f5f5f5; padding: 10px; text-align: left;") Telefon
                tr(style="padding: 10px;")
                    td(style="padding: 10px;")= name
                    td(style="padding: 10px;")= address
                    td(style="padding: 10px;")
                        a(style="text-decoration:none !important; text-decoration:none;")= userEmail
                    td(style="padding: 10px;")= phone
            div(style="color:#e63632; font-size:16px; font-weight:600; margin: 0.5rem 0;") Detail nákupu:
            table(style="margin: 0.5rem auto; width: 100%; border-collapse: collapse; border: none;")
                tr(style="padding: 10px;")
                    th(style="background: #f5f5f5; padding: 10px;") Produkt
                    th(style="background: #f5f5f5; padding: 10px;") Detail
                    th(style="background: #f5f5f5; padding: 10px;") Množství
                    th(style="background: #f5f5f5; padding: 10px;") Cena
                each product in productsList
                    tr(style="padding: 10px;")
                        td(style="padding: 0px;")
                            img(src=`${product.image}` alt='FireAlarm Product' style='height: 80px; width: 80px; display: block; margin-right: 1rem;')
                            p(style="color:#676767; font-size:15px;")= product.name 
                        td(style="padding: 0px; text-align: justify;") #{product.shortDescription}
                        td(style="padding: 0px; text-align: right;") #{product.count}
                        td(style="padding: 0px; text-align: right;") #{product.price}
            table(style="margin-top: 1rem; width: 100%; border-collapse: collapse; border: none; width: 55%; float: right;")
                tr(style="font-weight: bold; border: none; text-align: right;")
                    td(style="padding: 5px;") Cena zboží bez DPH:
                    td(style="padding: 5px;")= totalPrice 
                tr(style="font-weight: bold; border: none; text-align: right;")
                    td(style="padding: 5px;") DPH za zboží:
                    td(style="padding: 5px;")= totalVat
                tr(style="font-weight: bold; border: none; text-align: right;")
                    td(style="padding: 5px;") Cena za dopravu:
                    td(style="padding: 5px;")= delivery
                tr(style="font-weight: bold; border: none; text-align: right;")
                    td(style="padding: 5px;") Cena za platbu:
                    td(style="padding: 5px;")= paymentMethod
                tr(style="font-weight: bold; border: none; text-align: right;")
                    td(style="padding: 5px;") Celková cena vč. DPH:
                    td(style="padding: 5px;")= total
            div(style="background-color:#e63632; height:0.2vh; max-width:900px; margin-bottom:1rem;")
            div(style="color:#676767; font-size:14px; margin-bottom: 0.2em; text-align: left;")= companyName
            div(style="color:#676767; font-size:12px; margin-bottom: 0.2em; text-align: left;")= companyVAT 
            div(style="color:#676767; font-size:12px; margin-bottom: 0.2em; text-align: left;")= companyPhone
            div(style="color:#676767; font-size:12px; margin-bottom: 0.2em; text-align: left;")= companyStreet
            div(style="color:#676767; font-size:12px; margin-bottom: 0.2em; text-align: left;")= companyNumber
            div(style="color:#676767; font-size:12px; margin-bottom: 0.2em; text-align: left;")= companyCity
            div(style="color:#676767; font-size:12px; margin-bottom: 0.2em; text-align: left;")= companyZip
            div(style="color:#676767; font-size:12px; margin-bottom: 0.2em; text-align: left;")= companyMail


              

