doctype html
html
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(http-equiv='X-UA-Compatible', content='ie=edge')
    body
        div(style="max-width:1250px; height:35vh;")
            div(style="display: flex; flex-direction: row;")
                div(style="max-width:150px; height:7vh; class=logo;")
                    img(src='https://i.imgur.com/zwrkbD1.png' alt='logo' style="max-width:50px; margin:0em 1em 0em 1em;")
                h1(style="color:#e63632; font-size:35px; text-align:left;") FireAlarm
            div(style="background-color:#e63632; height:0.3vh; max-width:900px;")
            div(style="margin-top:1em; margin-left:1.75em;")
                h1(style="color:#2e2e2e; font-size:35px; text-align:left; margin:0")= heading
            div(style="color:#676767; font-size:18px; margin:1em 0em 3.5em 1.25em; font-weight:500")= textInfo
            if link
                div(style="font-size:16px; text-align:center")
                    a(href=`${link}` target='_blank' style="color:#2e2e2e")= link
